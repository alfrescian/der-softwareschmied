---
const links = [
  {
    url: "/imprint",
    description: "Impressum / Datenschutz",
  },
];
---

<footer class="relative flex items-center justify-center pb-10">
  <ul class="relative grid gap-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex items-center justify-center p-4 border-2 border-current "
            href={link.url}
          >
            <span>{link.description}</span>
          </a>
        </li>
      ))
    }
  </ul>
</footer>
